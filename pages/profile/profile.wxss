/* pages/profile/profile.wxss */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 270rpx;
  justify-content: center;
}

.userinfo-avatar image {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  font-size: 34rpx;
  font-family: MicrosoftYaHei;
  color: rgba(255, 255, 255, 1);
  line-height: 11rpx;
}

.userContent {
  text-align: center;
  position: absolute;
  z-index: 1;
}

.userBg {
  width: 100%;
  height: 100%;
}

.content{
  box-sizing: border-box;
  padding: 0 21rpx;
  width: 100%;
  /* background: pink; */
}
.file_item {
  /* height: 37rpx; */
  font-size:28rpx;
  font-family:MicrosoftYaHei;
  color:rgba(102,102,102,1);
  display: flex;
  align-items: center;
  justify-items: center;
  padding: 34rpx 0;
  position: relative;
  border-bottom: 1rpx solid #F1F1F1;
}
.file_item:last-child{
  border-bottom: none;
}
.file_item .redPoint{
  position: absolute;
  top: 16rpx;
  left: 26rpx;
  display: inline-block;
  height: 24rpx;
  width: 24rpx;
  background: red;
  border-radius: 50%;
  color: #fff;
  font-size: 18rpx;
  text-align: center;

  }
.file_item .item_icon{
  height: 37rpx;
  width: 37rpx;
}
.file_item .item_text{
  padding-left: 20rpx;
  
}
.file_item .dire{
  height: 22rpx;
  width: 22rpx;
  margin-left: auto;
}
.warning{
  box-sizing: border-box;
  font-size:32rpx;
  font-family:MicrosoftYaHei;
  width: 100%;
  padding: 60rpx 0;
  text-align: center;
}
.warning_text{
  width: 100%;
  box-sizing: border-box;
  padding: 0 50rpx;
  height: 70rpx;
  font-size: 28rpx;
  color: #555;
}
.yorn{
  display: flex;
  justify-content: space-between;
  padding:0 92rpx;
  box-sizing: border-box;
  width: 100%;
  height: 75rpx;
  margin-top: 60rpx;
}
.no{
  border:1px solid rgba(153,153,153,1);
  border-radius:8rpx;
  width: 45%;
  font-size:24rpx;
  line-height: 75rpx;
  background: #fff;
}
.yes{
  font-size:24rpx;
  color: #fff;
  width: 45%;
  background:rgba(15,27,67,1);
  border-radius:8rpx;
  line-height: 75rpx;
}
