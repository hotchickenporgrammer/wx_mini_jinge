/* component/order_item/order_item.wxss */

.clearfix::after, .clearfix::before {
  content: '';
  display: inline-block;
  clear: both;
}

.content_height{
  height: 250rpx !important;
}
.content {
  height: 500rpx;
  width: 100%;
  border-bottom: 20rpx solid #f5f5f5;
  position: relative;
}

.war{
  width: 100%;
  text-align: center;
  color: #ccc;
  padding: 100rpx 0 50rpx 0; 
}
.desc {
  padding: 40rpx 20rpx;
}

.desc image {
  height: 70rpx;
  width: 70rpx;
  border-radius: 50%;
}

.dot_info {
  overflow: hidden;
}

.left {
  float: left;
}

.right {
  height: 100%;
  float: left;
  padding-left: 20rpx;
  width: 85%;
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 30rpx;
  float: left;
  line-height: 30rpx;
}

.localtion {
  float: left;
  color: #fff;
  margin-left: 20rpx;
  font-size: 20rpx;
  padding: 2rpx 15rpx;
  background: rgba(161, 182, 199, 1);
  border-radius: 17px;
}

.activer {
  font-weight: bold;
  float: right;
  font-size: 26rpx;
  font-family: MicrosoftYaHei;
  color: rgba(15, 27, 67, 1);
}

.info_bottom {
  display: inline-block;
  font-size: 22rpx;
  font-family: MicrosoftYaHei;
  color: rgba(161, 182, 199, 1);
  margin-top: 8rpx;
  padding: 5rpx 15rpx;
  text-align: center;
  border: 1rpx solid rgba(161, 182, 199, 1);
  width: 320rpx;
  border-radius: 19px;
}

.cum_time {
  padding: 20rpx 0;
}

.content_class {
  font-size: 24rpx;
  font-family: MicrosoftYaHei;
  color: rgba(153, 153, 153, 1);
  box-sizing: border-box;
  padding: 30rpx;
}

.time {
  padding-left: 20rpx;
}

.content_text {
  line-height: 40rpx;
  height: 80rpx;
  width: 100%;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.money {
  font-weight: bold;
  font-size: 26rpx;
  font-family: MicrosoftYaHei;
  color: rgba(209, 48, 48, 1);
  text-align: end;
  padding-bottom: 30rpx;
}

.btn_group {
  float: right;
  padding-bottom: 40rpx;
  display: flex;
  justify-content: space-around;
}

/* .btn_group button{
  flex: 1;
} */

.btn_group button:first-child {
  font-size: 24rpx;
  font-family: MicrosoftYaHei;
  color: rgba(153, 153, 153, 1);
  line-height: 60rpx;
  text-align: center;
  width: 166rpx;
  height: 60rpx;
  border: 1rpx solid rgba(153, 153, 153, 1);
  border-radius: 30px;
}

.btn_group .oneMore {
  font-size: 24rpx;
  font-family: MicrosoftYaHei;
  color: rgba(153, 153, 153, 1);
  line-height: 60rpx;
  text-align: center;
  width: 166rpx;
  height: 60rpx;
  border: 1rpx solid rgba(153, 153, 153, 1);
  border-radius: 30px;
  margin: 0 20rpx;
}

.btn_group .eval {
  font-weight: bold;
  font-size: 24rpx;
  font-family: MicrosoftYaHei;
  color: #0f1b43 !important;
  line-height: 60rpx;
  text-align: center;
  width: 166rpx;
  height: 60rpx;
  border: 1rpx solid #0f1b43 !important;
  border-radius: 30px;
}
.warning{
  box-sizing: border-box;
  font-size:32rpx;
  font-family:MicrosoftYaHei;
  width: 100%;
  padding: 60rpx 0;
  text-align: center;
}
textarea{
  width: 100%;
  box-sizing: border-box;
  padding: 0 50rpx;
  height: 70rpx;
  font-size: 28rpx;
  color: #555;
}
.phd{
  font-size:28rpx;
  font-family:MicrosoftYaHei;
  color:rgba(204,204,204,1);
}
.yorn{
  display: flex;
  justify-content: space-between;
  padding:0 92rpx;
  box-sizing: border-box;
  width: 100%;
  height: 75rpx;
  margin-top: 60rpx;
}
.no{
  border:1px solid rgba(153,153,153,1);
  border-radius:8rpx;
  width: 45%;
  font-size:24rpx;
  line-height: 75rpx;
  background: #fff;
}
.yes{
  font-size:24rpx;
  color: #fff;
  width: 45%;
  background:rgba(15,27,67,1);
  border-radius:8rpx;
  line-height: 75rpx;
}