/* public/search_page/search_page.wxss */
.container{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 20rpx;
}
.search{
  display: flex;
  height: 70rpx;
}
.select{
  flex: 0 0 20%;
  font-size: 28rpx;
  border: 1rpx solid #ccc;
  color: #999;
  text-align: center;
  line-height: 70rpx;
  height: 70rpx;
  box-sizing: border-box;
  position: relative;
  padding-right: 0.5em;

}
.select::after{
  content: " ";
  position: absolute;
  top: 50%;
  transform: translateY(-25%);
  border-top: 13rpx solid  #999 ;
  border-left: 6rpx solid transparent ;
  border-right: 6rpx solid transparent ;
  right: 10rpx;
}
.select_nav{
  padding-right: 0.5em;
  width: 100%;
  background: #fff;
  border: 1px solid #ccc;
}
.item_nav{
  padding: 5rpx 0;
}
/* .item_nav:active{
  background: #ccc;
} */
.search_input{
  border: 1rpx solid #ccc;
  flex: 0 0 65%;
  box-sizing: border-box;
  padding: 5rpx;
  font-size: 32rpx;
  height: 70rpx;

}
.btn{
  flex: 0 0 15%;
  font-size: 30rpx;
  white-space: nowrap;
  line-height: 70rpx;
  height: 70rpx;
  box-sizing: border-box;
  color: #333;
  background: #fff;
}
.btn::after{
  border: none;
}
.record_title{
  font-size: 30rpx;
  padding: 30rpx 0;
}
.record_list{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  
}
.list_item{
  box-sizing: border-box;
  text-align: center;
  flex: 0 0 33.33333%;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
}
.item{
  color: #333;
  background: #f6f6f6;
  padding: 10rpx;
  border-radius: 9px;
}
